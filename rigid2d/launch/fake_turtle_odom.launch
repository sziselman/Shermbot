<launch>
    <arg name="use_rviz" default="true" doc="Controls whether rviz is launched-- default true"/>

    <node pkg="odometer" output="screen" type="odometer" name="odometer"/>

    <node pkg="fake_turtle" output="screen" type="fake_turtle" name="fake_turtle"/>

    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher"/>
    
    <node pkg="joint_state_publisher" type="joint_state_publisher" name="joint_state_publisher"/>

    <node name="rviz" pkg="rviz" args="-d $(find nuturtle_description)/config/model.rviz"/>

    <param name="wheel_base" type="double" value="0.033"/>
    <param name="wheel_radius" type="double" value="0.16"/>
    <param name="odom_frame_id" type="string" value="odom_frame_id"/>
    <param name="body_frame_id" type="string" value="body_frame_id"/>
    <param name="left_wheel_joint" type="string" value="left_wheel_link"/>
    <param name="right_wheel_joint" type="string" value="right_wheel_link"/>

    <rosparam command="load" file="$(find nuturtle_description)/config/diff_params.yaml"/>
</launch>