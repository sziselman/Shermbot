<launch>
    <arg name="use_rviz" default="true" doc="Controls whether rviz is launched-- default true"/>

    <node pkg="turtlebot3_teleop" name="turtlebot3_teleop_keyboard" type="turtlebot3_teleop_key" output="screen"/>
    
    <node pkg="nuturtlesim" type="tube_world" name="tube_world" output="screen" />

    <node name="rviz" pkg="rviz" args="-d $(find nuturtlesim)/config/model.rviz -f world" type="rviz"/>

    <param name="wheel_base" type="double" value="0.16"/>
    <param name="wheel_radius" type="double" value="0.033"/>
    <param name="odom_frame_id" type="string" value="odom"/>
    <param name="body_frame_id" type="string" value="base_footprint"/>
    <param name="left_wheel_joint" type="string" value="wheel_left_joint"/>
    <param name="right_wheel_joint" type="string" value="wheel_right_joint"/>
    <param name="slip_min" type="double" value="0"/>
    <param name="slip_max" type="double" value="0"/>
    <param name="twist_noise" type="double" value="0.01"/>

    <param name="tube_radius" type="double" value="0.0762"/>
    <param name="robot_radius" type="double" value="0.08"/>
    <rosparam param="tube1_location">[0.5, 0.5]</rosparam>
    <rosparam param="tube2_location">[-0.5, -0.5]</rosparam>
    <rosparam param="tube3_location">[1.0, 1.0]</rosparam>
    <rosparam param="tube4_location">[-1.0, -1.0]</rosparam>
    <rosparam param="tube5_location">[-0.75, 0.75]</rosparam>
    <rosparam param="tube6_location">[0.75, -0.75]</rosparam>
    <rosparam param="sens_covMat">[0.1, 0.0, 0.0, 1.0]</rosparam>
    <param name="world_frame_id" type="string" value="world"/>
    <param name="turtle_frame_id" type="string" value="turtle"/>
    <param name="tube_var" type="double" value="0"/>
    <param name="max_range" type="double" value="3"/>

    <rosparam command="load" file="$(find nuturtle_description)/config/diff_params.yaml"/>
</launch>